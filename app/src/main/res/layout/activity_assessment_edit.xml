<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssessmentEditActivity">

  <Button
      android:id="@+id/EditAssessmentEndDate"
      style="?android:spinnerStyle"
      android:layout_width="213dp"
      android:layout_height="49dp"
      android:layout_marginStart="96dp"
      android:layout_marginBottom="420dp"
      android:hint="End Date"
      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <RadioGroup
      android:id="@+id/EditAssessmentOAandPA"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="100dp"
      android:layout_marginBottom="540dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <RadioButton
        android:id="@+id/EditAssessmentOA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Objective Assessment" />

    <RadioButton
        android:id="@+id/EditAssessmentPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Performance Assessment" />
  </RadioGroup>

  <Button
      android:id="@+id/EditAssessmentCancel"
      android:layout_width="120dp"
      android:layout_height="74dp"
      android:layout_marginStart="144dp"
      android:layout_marginBottom="24dp"
      android:text="Cancel"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/EditAssessmentSubmit"
      android:layout_width="120dp"
      android:layout_height="74dp"
      android:layout_marginStart="248dp"
      android:layout_marginBottom="100dp"
      android:text="Submit"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/EditAssessmentDelete"
      android:layout_width="135dp"
      android:layout_height="70dp"
      android:layout_marginStart="36dp"
      android:layout_marginBottom="104dp"
      android:text="Delete Assessment"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="254dp"
      android:layout_height="53dp"
      android:layout_marginStart="76dp"
      android:layout_marginBottom="42dp"
      android:text="Edit Assessment"
      android:textSize="34sp"
      app:layout_constraintBottom_toTopOf="@+id/EditAssessmentOAandPA"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/EditAssessmentStartDate"
      style="?android:spinnerStyle"
      android:layout_width="213dp"
      android:layout_height="49dp"
      android:layout_marginStart="96dp"
      android:layout_marginBottom="484dp"
      android:hint="Start Date"
      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <EditText
      android:id="@+id/EditAssessmentDescription"
      android:layout_width="323dp"
      android:layout_height="109dp"
      android:layout_marginStart="44dp"
      android:layout_marginBottom="80dp"
      android:ems="10"
      android:hint="Assessment Description"
      android:inputType="textPersonName"
      app:layout_constraintBottom_toTopOf="@+id/EditAssessmentSubmit"
      app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>