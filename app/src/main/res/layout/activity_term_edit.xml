<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermEditActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginStart="224dp"
        android:layout_marginBottom="1dp"
        android:text="Classes To Be Added"
        app:layout_constraintBottom_toTopOf="@+id/editTermRecyclerView"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editTermRecyclerView2"
        android:layout_width="206dp"
        android:layout_height="326dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/SubmitTerm2"
        app:layout_constraintStart_toEndOf="@+id/editTermRecyclerView" />

    <Button
        android:id="@+id/EndDate2"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:hint = "End Date"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="496dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/termName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginBottom="675dp"
        android:text="Edit Term"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/EditTermName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="624dp"
        android:ems="10"
        android:hint="Term Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/StartDate2"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="13dp"
        android:hint = "Start Date"
        android:layout_marginBottom="562dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTermName" />

    <Button
        android:id="@+id/SubmitTerm2"
        android:layout_width="181dp"
        android:layout_height="85dp"
        android:layout_marginStart="212dp"
        android:layout_marginBottom="32dp"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deleteTerm"
        android:layout_width="171dp"
        android:layout_height="78dp"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="35dp"
        android:text="Delete Term"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editTermRecyclerView"
        android:layout_width="198dp"
        android:layout_height="326dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/deleteTerm"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="1dp"
        android:text="Available Classes"
        app:layout_constraintBottom_toTopOf="@+id/editTermRecyclerView"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>