<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAssessmentActivity2">

    <Button
        android:id="@+id/assessmentEndDate2"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="424dp"
        android:hint="End Date"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/EditAssessment2StartDate2"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="484dp"
        android:hint="Start Date"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/createAssessmentTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="672dp"
        android:text="Create Assessment"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/AsessmentType2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/ObjectiveAssessment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objective Assessment " />

        <RadioButton
            android:id="@+id/ProjectAssessment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performance Assessment" />
    </RadioGroup>

    <Button
        android:id="@+id/submitAssessment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="248dp"
        android:layout_marginBottom="32dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Cancel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="32dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/assessmentDescription2"
        android:layout_width="317dp"
        android:layout_height="104dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="171dp"
        android:ems="10"
        android:hint="Assessment Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/submitAssessment2"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>