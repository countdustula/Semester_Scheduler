<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssessmentEditActivity2">

    <Button
        android:id="@+id/EditAssessment2EndDate"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="8dp"
        android:hint="End Date"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/EditAssessment2Submit"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/EditAssessment2OAandPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/EditAssessment2StartDate"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/EditAssessment2OA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objective Assessment" />

        <RadioButton
            android:id="@+id/EditAssessment2PA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performance Assessment" />
    </RadioGroup>

    <Button
        android:id="@+id/EditAssessment2Cancel"
        android:layout_width="120dp"
        android:layout_height="74dp"
        android:layout_marginStart="212dp"
        android:layout_marginBottom="4dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/EditAssessment2Submit"
        android:layout_width="120dp"
        android:layout_height="74dp"
        android:layout_marginStart="604dp"
        android:layout_marginBottom="4dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/editAssessmentNotifyMe"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginStart="468dp"
        android:layout_marginBottom="4dp"
        android:text="Notify Me"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/editAssessment2Delete"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginStart="332dp"
        android:layout_marginBottom="4dp"
        android:text="Delete Assessment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="254dp"
        android:layout_height="53dp"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="12dp"
        android:text="Edit Assessment"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/EditAssessment2Description"
        app:layout_constraintStart_toEndOf="@+id/EditAssessment2OAandPA" />

    <Button
        android:id="@+id/EditAssessment2StartDate"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginStart="100dp"
        android:hint="Start Date"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/EditAssessment2EndDate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/EditAssessment2Description"
        android:layout_width="317dp"
        android:layout_height="104dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Assessment Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/EditAssessment2Submit"
        app:layout_constraintStart_toEndOf="@+id/EditAssessment2EndDate" />

</androidx.constraintlayout.widget.ConstraintLayout>