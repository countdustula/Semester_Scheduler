<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermEditActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginStart="224dp"
        android:layout_marginBottom="1dp"
        android:text="Classes To Be Added"
        app:layout_constraintBottom_toTopOf="@+id/editTermRecyclerView"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editTermRecyclerView2"
        android:layout_width="223dp"
        android:layout_height="260dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTermRecyclerView" />

    <Button
        android:id="@+id/EndDate2"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginStart="468dp"
        android:layout_marginBottom="88dp"
        android:hint="End Date"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/termName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="512dp"
        android:layout_marginBottom="272dp"
        android:text="Edit Term"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/EditTermName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="468dp"
        android:layout_marginBottom="204dp"
        android:ems="10"
        android:hint="Term Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/StartDate2"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginStart="464dp"
        android:layout_marginTop="13dp"
        android:hint="Start Date"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTermName"
        app:layout_constraintVertical_bias="0.035" />

    <Button
        android:id="@+id/SubmitTerm2"
        android:layout_width="164dp"
        android:layout_height="76dp"
        android:layout_marginStart="572dp"
        android:layout_marginBottom="4dp"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deleteTerm"
        android:layout_width="158dp"
        android:layout_height="77dp"
        android:layout_marginStart="412dp"
        android:layout_marginBottom="4dp"
        android:text="Delete Term"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editTermRecyclerView"
        android:layout_width="184dp"
        android:layout_height="261dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="1dp"
        android:text="Available Classes"
        app:layout_constraintBottom_toTopOf="@+id/editTermRecyclerView"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>