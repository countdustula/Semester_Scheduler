<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTermActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="129dp"
        android:layout_height="29dp"
        android:layout_marginStart="244dp"
        android:text="Classes to be Added"
        app:layout_constraintBottom_toTopOf="@+id/createTermRecyclerView"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/EndDate"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="52dp"
        android:hint="End Date"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/SubmitTerm"
        app:layout_constraintStart_toEndOf="@+id/createTermRecyclerView2" />

    <TextView
        android:id="@+id/termName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="508dp"
        android:layout_marginBottom="260dp"
        android:text="CreateTerm"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/createTermName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="476dp"
        android:layout_marginBottom="200dp"
        android:ems="10"
        android:hint="Term Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/StartDate"
        style="?android:spinnerStyle"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginStart="472dp"
        android:layout_marginTop="13dp"
        android:hint="Start Date"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createTermName"
        app:layout_constraintVertical_bias="0.268" />

    <Button
        android:id="@+id/backButtonFromCreateTerm2"
        android:layout_width="94dp"
        android:layout_height="73dp"
        android:layout_marginStart="412dp"
        android:layout_marginBottom="4dp"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SubmitTerm"
        android:layout_width="203dp"
        android:layout_height="94dp"
        android:layout_marginStart="520dp"
        android:layout_marginBottom="4dp"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/createTermRecyclerView"
        android:layout_width="191dp"
        android:layout_height="189dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/createTermRecyclerView2"
        android:layout_width="179dp"
        android:layout_height="191dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/createTermRecyclerView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="129dp"
        android:layout_height="29dp"
        android:layout_marginStart="36dp"
        android:text="Available Classes"
        app:layout_constraintBottom_toTopOf="@+id/createTermRecyclerView"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>